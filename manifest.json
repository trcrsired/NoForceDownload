{
  "manifest_version": 3,
  "name": "NoForceDownload",
  "version": "1.0",
  "description": "Blocks automatic app redirection and forced APK downloads on mobile sites like Bilibili and Baidu.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "*://m.bilibili.com/*",
    "*://weread.qq.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://m.bilibili.com/*"
      ],
      "js": ["content.js", "bilibili.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://weread.qq.com/*"
      ],
      "js": ["wechatread.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "icons/icon.png"
  }
}
